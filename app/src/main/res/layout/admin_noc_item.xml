<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_layout_blue_light"
    android:layout_marginTop="5dp"
    android:layout_height="70dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/student_img"
        android:layout_marginStart="20dp"
        android:src="@drawable/teachersday"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/studentName"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Rajnish Ranjan (7th Sem)"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/student_id"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Sys Id: 2020573424"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/studentName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/guide_check"
        android:layout_marginEnd="20dp"
        android:src="@drawable/check"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>